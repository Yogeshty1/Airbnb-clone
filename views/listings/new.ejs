<% layout('layouts/boilerplate') -%>
<div class="row">
  <div class="col-5 offset-3"  >
  <body>
        <br><br>

    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
<lable for="title" class="form-label">Title</lable>
      <input name="listing[title]"
      placeholder="Add a catchy title" 
      type="text" 
      class="form-control"
      required />
      </div>
    
    
    <div class="mb-3">
      <lable for="description" class="form-label">Description</lable>
      <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
      ></textarea>
    </div>
      

    <div class="mb-3">
      <lable for="image" class="form-label">Image Link</lable>
<input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"/>
    </div>


    <div class="row">
   
    <div class="mb-3 col-md-4">
      <lable for="price" class="form-label">Price</lable>
      <input
        name="listing[price]"
      
        placeholder="enter price"
        class="form-control"

        required
      />
    </div>
      

    <div class="mb-3 col-md-8">
      <lable for="location" class="form-label">Location</lable>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
      />
</div>
      
    <div class="mb-3">
      <lable for="country" class="form-label">Country</lable>
      <input name="listing[country]" 
        placeholder="enter country" 
        type="text"
        class="form-control"
        required />
    </div>
      </div>



      <button type="submit" class="btn btn-dark add-btn mb-3">Add</button>
    </form>
    <br><br>
  </body>
  </div>
  </div>
