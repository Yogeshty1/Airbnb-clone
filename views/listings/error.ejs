<div class="error-container">
    <h1>Oops! Something went wrong</h1>
    <% if (error && error.message) { %>
        <p><%= error.message %></p>
    <% } %>
    <% if (error && error.status) { %>
        <p>Status: <%= error.status %></p>
    <% } %>
    <a href="/" class="btn">Return to Home</a>
</div>