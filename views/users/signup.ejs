<% layout('layouts/boilerplate') -%>

<div class="row">
    <h1 class ="col-6 offset-3"> Sign up on Wanderlust</h1>
  <div class="col-6 offset-3">
<form action="/signup" method = "post" class="needs-validation" novalidate >
     <div class="mb-3">
<lable for="Username" class="form-label">Username</lable>
      <input name="Username"
        ID="Username"
      type="text" 
      class="form-control"
      required />

       <div class="mb-3">
<lable for="email" class="form-label">email</lable>
      <input name="email"
        ID="email"
      type="email" 
      class="form-control"
      required />

       <div class="mb-3">
<lable for="passowrd" class="form-label">passowrd</lable>
      <input name="passowrd"
        ID="passowrd"
      type="passowrd" 
      class="form-control"
      required />

      <button class="btn btn-success"> Signup </button>
</form>

 </div>
</div>   